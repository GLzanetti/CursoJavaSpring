package OO.heranca.desafio;

public class Fusca extends Carro{
	
	public Fusca(){
		this(130);
	}
	
	Fusca(int velocidadeMax){
		super(velocidadeMax);
	}
	
	@Override
	public boolean acelerar() {
		if(velocidadeAtual + 5 > VELOCIDADE_MAXIMA) {
			velocidadeAtual = VELOCIDADE_MAXIMA;
		} else {
			velocidadeAtual += 5;		
		}
		return true;				
	}
}
